        <TextBox x:ConnectionId='2' x:Name="chatbox11" HorizontalAlignment="Left" Margin="387,363,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" FontFamily="Global User Interface" PlaceholderText="Nachricht"                                     />
